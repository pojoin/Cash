<?xml version="1.0" encoding="utf-8"?>
<mx:ApplicationControlBar xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" height="100%">
	
	<mx:Script>
		<![CDATA[
			import com.cash.model.UserModel;
			[Bindable]
			private var userModel:UserModel = UserModel.getInstance();
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%">
		<mx:Image width="100%" height="90%" horizontalAlign="center" verticalAlign="middle"/>
		<mx:Label text="{userModel.user.nickName}" textAlign="center"/>
	</mx:VBox>
</mx:ApplicationControlBar>
